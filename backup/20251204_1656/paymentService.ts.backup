export const walletService = {
  getMyWallet: async () => {
    const response = await api.get('/wallet/my-wallet');
    return response.data;
  },

  getTransactions: async (): Promise<Transaction[]> => {
    const response = await api.get('/wallet/transactions');
    return response.data;
  },

